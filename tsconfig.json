{
    "compilerOptions": {
        // Default
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext", "es6"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        // Added
        "jsx": "react-jsx",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "/src",
        "allowJs": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist", "types"]
}
